generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int  @id @default(autoincrement())
  email String @unique
  password String
  username String
  movies Movie[] @relation("UserMovies")
  filters Filter[]
  createdTags Tag[]
  createdAt DateTime @default(now())
}

model Movie {
  id Int @id @default(autoincrement())
  tmdbId Int @unique
  users User[] @relation("UserMovies")
  tags Tag[] @relation("MovieTags")
  createdAt DateTime @default(now())
}

model Tag {
  id Int @id @default(autoincrement())
  createdBy User @relation(fields: [createdById], references: [id])
  createdById Int
  name String @unique
  movies Movie[] @relation("MovieTags")
}

model Filter {
  id Int @id @default(autoincrement())
  name String
  user User @relation(fields: [userId], references: [id])
  userId Int

  //Store puzzle pieces as JSON
  conditions Json
  createdAt DateTime @default(now())
}